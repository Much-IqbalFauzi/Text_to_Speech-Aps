<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/snowbelt"
    android:padding="@dimen/space_24"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moshi-Moshi"
            android:textAlignment="center"
            android:textSize="@dimen/text_32"
            android:textStyle="bold"
            android:textColor="@color/nyctophile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connecting Kokoro"
            android:textSize="@dimen/text_20"
            android:textAlignment="center"
            android:textColor="@color/nyctophile"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_24"
        android:paddingVertical="@dimen/space_12"
        android:orientation="horizontal">
        <Spinner
            android:layout_width=""
            android:layout_height=""
    </LinearLayout>



</LinearLayout>