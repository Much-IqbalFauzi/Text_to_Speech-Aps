<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_24"
    android:background="@color/snowbelt"
    tools:context=".DetailTranslate">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/detail_back"
            android:layout_width="@dimen/size_35"
            android:layout_height="@dimen/size_35"
            android:background="@drawable/ic_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moshi-Moshi"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_32"
                android:textStyle="bold"
                android:textColor="@color/nyctophile"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tsunagatteimasu"
                android:textSize="@dimen/text_20"
                android:textAlignment="textEnd"
                android:textColor="@color/nyctophile"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/space_24"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/detail_from_speak"
                    android:layout_width="@dimen/size_35"
                    android:layout_height="@dimen/size_35"
                    android:background="@drawable/ic_volume"
                    android:paddingLeft="@dimen/space_10"/>
                <TextView
                    android:id="@+id/detail_from_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:paddingRight="@dimen/space_10"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/detail_from_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:textSize="@dimen/text_16"
                android:textColor="@color/nyctophile"
                android:padding="@dimen/space_10"
                android:background="@drawable/rounded_white"
                android:gravity="top|left"
                android:text="Lorizzle Ipsum"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/space_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/detail_target_speak"
                    android:layout_width="@dimen/size_35"
                    android:layout_height="@dimen/size_35"
                    android:background="@drawable/ic_volume"
                    android:paddingLeft="@dimen/space_10"/>
                <TextView
                    android:id="@+id/detail_target_lang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:paddingRight="@dimen/space_10"
                    android:textSize="@dimen/text_20"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/detail_target_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:textSize="@dimen/text_16"
                android:textColor="@color/nyctophile"
                android:padding="@dimen/space_10"
                android:background="@drawable/rounded_white"
                android:gravity="top|left"
                android:text="Lorizzle Ipsum"/>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>